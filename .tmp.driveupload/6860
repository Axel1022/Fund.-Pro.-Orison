/*Programa que le pida al usuario un numero del 1 al 7
y que segun el numero, escriba en la pantalla el 
nombre del dia de la semana correspondiente
Si el usuario inserta un 1, escriba "Domingo"
Si el usuario inserta un 2, escriba "Lunes"
Y así sucesivamente*/
using System; 
{{
    string Num;
    Console.Write("Ingresa un numero del 1 al 7: ");
    Num = Console.ReadLine(); 
    switch (Num)
    {
        case "1": 
            Console.WriteLine("Lunes"); break;
        case "2": 
            Console.WriteLine("Martes"); break;
        case "3": 
            Console.WriteLine("Miercoles"); break;
        case "4": 
            Console.WriteLine("Jueves"); break;
        case "5": 
            Console.WriteLine("Viernes"); break;
        case "6": 
            Console.WriteLine("Sabado"); break;
        case "7": 
            Console.WriteLine("Domingo"); break;   
        default:
        Console.WriteLine("No es una opcion valida."); break; 

    }
}}

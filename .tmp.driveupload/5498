/*PROGRAMA QUE LEA DOS NÚMEROS Y DETERMINE
SI LA SUMATORIA DE AMBOS NÚMEROS ES PAR O IMPAR*/

using System;
{
    {
        //Variables
        int A, B, Res;
        //Entrada
        Console.Write("Ingrese un numero: ");
        A = int.Parse(Console.ReadLine());
        Console.Write("Ingrese un numero: ");
        B = int.Parse(Console.ReadLine());
        //Proceso
        Res = A + B;
        if (A % 2 == 0)
        {
            //Salida
            Console.Write(Res + " es  par");
        }
        else
        {
            //Salida
            Console.Write(Res + " es impar");
        }


    }
}

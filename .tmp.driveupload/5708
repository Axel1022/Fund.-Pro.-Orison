/* PROGRAMA QUE LEA UN NUMERO DE DOS DÍGITOS Y DETERMINE
SI AMBOS DÍGITOS SON PARES O IMPARES. DEBE MOSTRAR UN MENSAJE
DANDO LA INFORMACIÓN DE CADA DÍGITO (DECIR: "EL 1ER DÍGITO ES
__(PAR  O IMPAR), EL SEGUNDO..."). */
using System;
{
    {
        //Variales
        int Num, Num1, Num2;
        //Entrada
        Console.Write("Ingrese un numero de dos digitos: ");
        Num = int.Parse(Console.ReadLine());
        //Proceso
        Num1 = Num % 100 / 10;
        Num2 = Num % 10;
        if (Num1 % 2 == 0)
        {
            Console.WriteLine(Num1 + " es par");
        }
        else
        {
            Console.WriteLine(Num1 + " es impar");
        }

        if (Num2 % 2 == 0)
        {
            Console.WriteLine(Num2 + " es par");
        }
        else
        {
            Console.WriteLine(Num2 + " es impar");
        }

    }
}
